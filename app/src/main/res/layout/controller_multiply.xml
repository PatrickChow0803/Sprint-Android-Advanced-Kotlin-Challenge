<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_first_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:inputType="number"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="64sp"
        app:layout_constraintEnd_toStartOf="@+id/et_first_top_right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="86dp" />

    <EditText
        android:id="@+id/et_first_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:inputType="number"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_first_top_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="86dp" />

    <EditText
        android:id="@+id/et_first_bot_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:inputType="number"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="64sp"
        app:layout_constraintEnd_toStartOf="@+id/et_first_bot_right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_first_top_left"
        tools:layout_editor_absoluteY="232dp" />

    <EditText
        android:id="@+id/et_first_bot_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:inputType="number"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_first_bot_left"
        app:layout_constraintTop_toBottomOf="@id/et_first_top_right"
        tools:layout_editor_absoluteY="232dp" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_second_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/btn_multiply"
        android:layout_marginTop="64dp"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="64sp"
        app:layout_constraintEnd_toStartOf="@+id/et_second_top_right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="417dp" />

    <EditText
        android:id="@+id/et_second_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:inputType="number"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@id/btn_multiply"
        android:layout_marginTop="64dp"
        android:textColor="#FFF"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_second_top_left"
        tools:layout_editor_absoluteY="417dp" />

    <EditText
        android:id="@+id/et_second_bot_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:inputType="number"
        android:text="1"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@id/et_second_top_left"
        android:layout_marginTop="64dp"
        android:textSize="64sp"
        app:layout_constraintEnd_toStartOf="@+id/et_second_bot_right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="546dp" />

    <EditText
        android:id="@+id/et_second_bot_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:inputType="number"
        android:text="1"
        android:textColor="#FFF"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/et_second_top_right"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_second_bot_left"
        tools:layout_editor_absoluteY="546dp" />


</androidx.constraintlayout.widget.ConstraintLayout>